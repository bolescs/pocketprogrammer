<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:background="@color/platinum">

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="@color/text"
        android:hint="# to convert"
        android:textColorHint="@android:color/tertiary_text_dark"
        android:id="@+id/dec_enter_convert"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:imeOptions="actionDone"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/dec_convert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/new_button_style"
        android:gravity="center"
        android:text="Convert"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dec_enter_convert"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dec_to_hex_text"
        android:layout_below="@+id/dec_convert"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dec_to_bin_text"
        android:layout_below="@+id/dec_to_hex_text"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/text"
        android:textStyle="bold"
        android:textSize="28sp"/>

</RelativeLayout>