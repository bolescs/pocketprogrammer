<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/platinum">

    <TextView
        android:text="Quiz Results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:id="@+id/result_title"/>

    <TextView
        android:text="CORRECT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:id="@+id/results_count"/>

    <TextView
        android:text="TOTAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/results_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:id="@+id/total_count"/>

    <TextView
        android:text="TIME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:id="@+id/timer_header"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text"
        android:id="@+id/try_again_button"
        android:background="@drawable/new_button_style"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timer_header"/>

</RelativeLayout>